<div>
  <h1>My Blog</h1>

  <div>
    new post
    <%= link_to 'Create', new_post_path %>
  </div>

  <% if @posts.count == 0 %>
    no posts
  <% else %>
    <% @posts.each do |post| %>
      <%= link_to post.title, post_path(post) %>
      <%= link_to 'delete', post_path(post), method: :delete, data: { confirm: "Are you sure?" } %> 
      <br> 
    <% end %> 
  <% end %>

</div>